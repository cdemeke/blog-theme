{{!< default-index}}
<header class="art-header index" id=""style="background-image: url(http://static.pexels.com/wp-content/uploads/2015/01/agriculture-clouds-cloudy-3942.jpeg); background-size: 100%; background-position: 50% 0px; height:100vh;">
        <div class="art-header-inner" style="margin-top: 0px; opacity: 1;">
            <h2 class="art-title" style="font-size: 98px; color: white; text-shadow: rgba(0, 0, 0, 0.0980392) 3px 3px 0px, rgba(0, 0, 0, 0.0980392) -1px -1px 0px, rgba(0, 0, 0, 0.0980392) 1px -1px 0px, rgba(0, 0, 0, 0.0980392) -1px 1px 0px, rgba(0, 0, 0, 0.0980392) 1px 1px 0px;">Christian Demeke</h2>
            <p class="art-subtitle" style="">
                <br>
                <a class="btn" href="/intro/">about me</a>
                <a class="btn" href="#blog">blog</a>
            </p>


        </div>
    </header>
<div id="home">
    <div class="posts">
        <nav class="art-list">

          <ul class="art-list-body">
            <a href="javascript: void(0)" name="blog"></a> 
            {{#foreach posts }}
            <li class="art-list-item">
                <div class="art-list-item-title-and-time">
                    <h2 class="art-list-title"><a href="{{ @blog.url }}{{ url }}">{{ title }}</a></h2>
                    <div class="art-list-time">{{date published_at format="MMMM Do, YYYY"}}</div>
                    {{#if featured}}
                    <div class="art-list-time"><span style="color:#F40034;">&#10029;</span> Featured</div>
                    {{else}}{{/if}}
                </div>
                <p>{{excerpt}} &hellip;</p>
            </li>
            {{/foreach}}
          </ul>
        </nav>
    </div>
</div>

<footer class="footer">
{{pagination}}