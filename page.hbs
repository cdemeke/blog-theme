{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}

<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        <a class="subscribe-button icon-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>
        <!-- Social Links -->
        <a class="back-button icon-arrow-left" href="{{@blog.url}}">Home</a>
        <a class="icon-button" target="_blank" href="https://instagram.com/chrisdemeke/"><i class="fa fa-instagram"></i></a>
        <a class="icon-button" target="_blank" href="https://www.linkedin.com/in/demeke"><i class="fa fa-linkedin"></i></a>
        <a class="icon-button" target="_blank" href="https://twitter.com/chrisdemeke"><i class="fa fa-twitter"></i></a>
        <a class="icon-button" target="_blank" href="https://github.com/cdemeke"><i class="fa fa-github"></i></a>

    </nav>
</header>

<main class="content" role="main">

    <article class="{{post_class}}">
    {{! Everything inside the #post tags pulls data from the post }}

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
        </header>

        <section class="post-content">
            {{content}}
        </section>

    </article>

</main>
{{/post}}
